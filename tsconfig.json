{
  "compilerOptions": {
    "outDir": "./dist",  // Directorio de salida para los archivos compilados
    "rootDir": "./src",  // Directorio raíz de tus archivos fuente
    "target": "ES6",  // Versión de ECMAScript de salida
    "module": "commonjs",  // Módulo de sistema a usar
    "declaration": true,  // Generar archivos de declaración (.d.ts)
    "strict": true,  // Habilitar todas las verificaciones estrictas
    "esModuleInterop": true,  // Habilitar interoperabilidad con módulos ES6
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
